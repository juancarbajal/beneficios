<?php if ($this->pageCount): ?>
    <div class="box-footer clearfix">
        <ul class="pagination pagination-sm no-margin pull-right">
            <li class="<?= !isset($this->previous) ? 'disabled' : ''; ?>">
                <a href="<?= $this->url(
                    'referido',
                    array(
                        'page' => $this->first,
                        'order_by' => $order_by,
                        'order' => $order,
                        'cliente' => $c,
                        'fecha_ini' => $fi,
                        'fecha_fin' => $fe
                    )
                ); ?>">&laquo;</a>
