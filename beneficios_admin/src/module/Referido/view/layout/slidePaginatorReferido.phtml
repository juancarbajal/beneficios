                    <a href="<?= $this->url(
                        'referido',
                        array(
                            'page' => $page,
                            'order_by' => $order_by,
                            'order' => $order,
                            'cliente' => $c,
                            'fecha_ini' => $fi,
                            'fecha_fin' => $fe
                        )
                    ); ?>"><?= $page; ?></a>
                </li>
            <?php endforeach; ?>
            <li class="<?= !isset($this->next) ? 'disabled' : ''; ?>">
                <a href="<?= $this->url(
                    'referido',
                    array(
                        'page' => $this->last,
                        'order_by' => $order_by,
                        'order' => $order,
                        'cliente' => $c,
                        'fecha_ini' => $fi,
                        'fecha_fin' => $fe
                    )
